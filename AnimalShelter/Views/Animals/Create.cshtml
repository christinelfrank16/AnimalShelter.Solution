@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h4>Add a new animal</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Type)
    @Html.TextBoxFor(model => model.Type)

    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    @Html.LabelFor(model => model.AdmittanceDate)
    @Html.TextBoxFor(model => model.AdmittanceDate)

    <p>Male: </p>  @Html.RadioButtonFor(model => model.Gender, "true")
    <p>Female: </p> @Html.RadioButtonFor(model => model.Gender, "false")

    @Html.LabelFor(model => model.Breed)
    @Html.TextBoxFor(model => model.Breed)
    <input type="submit" value="Add new animal" />
}
<p>@Html.ActionLink("Show all animals", "Index")</p>